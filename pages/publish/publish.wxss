.container {
  background-color: #fffcf5;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}

.tab_bar_container {
  position: fixed;
  bottom: 0;

  width: 100%;
  height: 105rpx;

  text-align: center;

  border-top: 1rpx solid #d9d9d9;
  background-color: #9e7f60;
  color: #fff;
  font-size: 28rpx;
}
.publish_text{
  line-height: 105rpx;
}
.weui-cells_after-title:before{
  border: none;
}
.weui-cells_after-title{
  color:#999;
  font-size:13px
}
.weui-panel__hd:after{
  border: none;
}
.weui-panel__hd {
  border-top: 1rpx solid #d9d9d9;
}
.comment_area{
  width: calc(100vw - 30px);
  height: 300rpx;
  margin-top: 20rpx;
  padding:10rpx 30rpx 0rpx;
  font-size: 15px;
}
.img_container{
  width: calc(33.33333vw - 10px);
  height: calc(33.33333vw - 10px);
  display: inline-block;
  position: relative;
}
.publish_img{
  width: 80%;
  height: 80%;
  padding: 10%;
}
.add_img{
  display: inline-block;
  width: calc(33.33333vw - 10px);
  height: calc(33.33333vw - 10px);
}
.delete_icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
}
