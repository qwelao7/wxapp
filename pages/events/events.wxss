.page {
  position: relative;

  height: 100%;
}

.container {
  height: 100%;
}

.border {
  border-bottom: 1rpx solid #d8d8d8;
}

.index-banner {
  width: 100%;
  height: 297rpx;
}

.bannerImg {
  width: 100%;
  height: 297rpx;
}
.weui-cell_access{
  padding: 10px 15px 10px 0;
}
.weui-cells_after-title:before {
  border: none
}
.weui-cells_after-title:after {
  border: none
}
.event_category{
  font-size: 26rpx;
  color: #9E7F60;
}
.event_category_more{
  font-size: 22rpx;
  color: #a0a0a0;
}
.event_list{
  width: 100%;
  white-space: nowrap;
}
.event-container{
  width: calc(33.33333vw - 10px);
  display: inline-block;
  margin-right: 15px;

}
.event_img{
  width: calc(33.33333vw - 10px);
  height: calc(33.33333vw - 10px);
}
.event_title{
  display: block;
  text-align: center;
  font-size: 24rpx;
}
.event_project{
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: #9E7F60;
}