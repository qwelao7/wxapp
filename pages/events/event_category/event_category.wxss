.page{
  height: 100%;
  position: relative;
}
.container{
  height: 100%;
}
.event_container{
  width: 100%;
  margin-top: 30rpx;
}
.event_banner{
  display: block;
  width: calc(100vw - 30px);
  height: 294rpx;
  padding: 0 15px;
}
.weui-cell{
  border-bottom: 1rpx solid #d9d9d9;
  padding: 10px 0;
  margin: 0 15px;
}
.weui-cell:before{
  border: none;
}
.weui-cell:after{
  border: none;
}
.hash_icon {
  display: inline-block;

  width: 20rpx;
  height: 20rpx;

  vertical-align: middle;
}
.weui-cell__bd{
  font-size: 26rpx;
}
.weui-cell__ft{
  font-size: 20rpx;
}