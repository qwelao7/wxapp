<view>
  <view style="display:none">
    <image wx:for="{{contentlist}}" wx:key="id" id="{{item.id}}" src="{{item.annexs[0]}}" bindload="onImageLoad"></image>
  </view>
  <image src="../../img/publish_1.png" wx:if="{{wxShow}}" class="publish_icon" bindtap="tapPublish"></image>
  <scroll-view scroll-y="true" style="height:{{scrollH}}px">
    <view style="width:100%">
      <view class="img_item_1">
        <view wx:for="{{col1}}" wx:key="id" data-url="{{item.annexs[1]}}" bindtap="toVideoInfo">
          <image src="{{item.annexs[0]}}" style="width:100%;height:{{item.height}}px"></image>
          <view style="height: 42rpx">
            <image class="video_avatar" src="{{item.headPicName}}" style=""></image>
            <view class="video_author">{{item.userName}}</view>
          </view>
          <view class="video_title">{{item.topicContent}}</view>
        </view>
      </view>
      <view class="img_item_2">
        <view wx:for="{{col2}}" wx:key="id" data-url="{{item.annexs[1]}}" bindtap="toVideoInfo">
          <image src="{{item.annexs[0]}}" style="width:100%;height:{{item.height}}px"></image>
          <view style="height: 42rpx">
            <image class="video_avatar" src="{{item.headPicName}}" style=""></image>
            <view class="video_author">{{item.userName}}</view>
          </view>
          <view class="video_title">{{item.topicContent}}</view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
