image {
  width: 100%;
}

.container {
  background-color: #fffcf5;
  position: relative;
  padding-bottom: 105rpx;
  height: 100%;
}

.bannerImg {
  width: 100%;
  height: 375rpx;
}

.icon-box {
  position: relative;

  display: flex;
}

.icon-box__ctn {
  flex-shrink: 100;
}

.icon-box__title {
  font-size: 30rpx;
}

.icon-box__desc {
  font-size: 22rpx;

  margin-top: 6rpx;
}

.icon-comment__title {
  font-size: 22rpx;
}

.icon-comment__desc {
  font-size: 26rpx;

  margin-top: 6rpx;
}

.icon-avatar {
  display: inline-block;

  width: 80rpx;
  height: 80rpx;
  margin-right: 16rpx;

  vertical-align: middle;

  border-radius: 50%;
}

.hash_title {
  font-size: 20rpx;

  position: absolute;
  right: 0;
}

.hash_icon {
  display: inline-block;

  width: 22rpx;
  height: 22rpx;

  vertical-align: middle;
}

.weui-grids {
  padding: 0 30rpx;

  border: none;
}

.weui-grid {
  margin-bottom: 6rpx;
  padding: 0;
  padding-right: 6rpx;

  border: none;
}

.weui-grid__icon {
  width: 226rpx;
  height: 226rpx;
}

.weui-article__p {
  font-size: 26rpx;

  margin-bottom: 0;
  padding: 10rpx 30rpx;
}

.comment_btn_bar {
  padding: 0 30rpx;
}

.like-container {
  margin-right: 60rpx;
  margin-bottom: 30rpx;

  vertical-align: middle;
}

.comment-container {
  vertical-align: middle;
}

.weui-icon {
  display: inline-block;

  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.like_num {
  font-size: 22rpx;

  vertical-align: middle;
}

.comment-list {
  margin-left: 30rpx;
  padding: 30rpx 30rpx 30rpx 0;

  border-top: 1rpx solid #d9d9d9;
}

.praise-img {
  display: inline-block;

  width: 50rpx;
  height: 50rpx;
  margin-right: -25rpx;

  vertical-align: middle;

  border-radius: 50%;
}

.weui-cells_after-title {
  /*margin-bottom: -2rpx;*/

  background-color: #fffcf5;

}

.weui-cells:after {
  bottom: 0;
  border-bottom: none;
}

.weui-cells:before {
  top: 0;
  border-top: none;
}

.weui-cell {
  height: 100rpx;
  padding: 0 30rpx;
}

.praise-number {
  margin-right: 30rpx;
}

.wxParser {
  padding: 30rpx;
}

.tab_bar_container {
  position: fixed;
  bottom: 0;

  width: 100%;
  height: 105rpx;

  text-align: center;

  border-top: 1rpx solid #d9d9d9;
  background-color: #fffcf5;
}

.tab_bar {
  font-size: 24rpx;
  line-height: 55rpx;

  display: box;
  height: 100%;
}

.tab_bar_left {
  border-right: 1rpx solid #d9d9d9;
}

.tab_bar_item {
  height: 55rpx;
  padding: 25rpx 0;
}

.tab_bar_icon {
  display: inline-block;

  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;

  vertical-align: middle;
}
