<!--index.wxml-->
<scroll-view scroll-y class="container">

  <!--顶部banner轮播图-->
  <swiper interval="3000" duration="500" circular="true" indicator-dots="true" style="width: 100%;height: 375rpx">
    <block wx:for="{{bannerImgs}}"wx:key="*this">
      <swiper-item>
        <image class="bannerImg" src="{{item}}" bindtap="tapBanner" data-id="{{index}}"></image>
      </swiper-item>
    </block>
  </swiper>

  <block wx:for="{{contentlist}}" wx:key="*this" wx:for-index="indexs" wx:for-item="items">
    <view>

      <view style="padding:30rpx;">
        <view class="icon-box">
          <image class="icon-avatar" style="" src="{{items.headPicName}}"></image>
          <view class="icon-box__ctn">
            <view class="icon-box__title">
              {{items.userName}}
            </view>
            <view class="icon-box__desc">{{items.inTimeTag}}</view>
          </view>
          <view class="hash_title">
            <image class="hash_icon" src="../../img/hash_tag1.png"></image>
            桃李春风
          </view>
        </view>
      </view>

      <view class="weui-grids" wx:if="{{items.annexs}}.length>0">
        <block wx:for="{{items.annexs}}" wx:key="*this" wx:for-index="index" wx:for-item="item">
          <view class="weui-grid">
            <image class="weui-grid__icon" lazy-load="true" src="{{item}}" bindtap="previewImg" data-indexs="indexs" data-index="index"/>
          </view>
        </block>
      </view>

      <view class="weui-article__p black">
        {{items.topicContent}}
      </view>

      <view class="weui-flex comment_btn_bar">
        <view class="placeholder like-container">
          <image class="weui-icon" src="../../img/like_1.png"></image>
          <text class="gray like_num">{{items.topicPraiseNumber}}</text>
        </view>
        <view class="placeholder comment-container">
          <image class="weui-icon" src="../../img/comment_1.png"></image>
          <text class="gray like_num">{{items.topicCommentNumber}}</text>
        </view>
      </view>
      <view style="width: 100%;height: 15rpx;background-color:#F2F2F2;"></view>
    </view>
  </block>

</scroll-view>
