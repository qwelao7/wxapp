<scroll-view scroll-y class="container">

  <picker bindchange="bindPickerChange" value="{{index}}" range-key="name" range="{{array}}">
    <view class="weui-panel__hd">发布项目</view>
    <view class="weui-cells weui-cells_after-title" hover-stay-time="200">
      <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">{{array[index].name?array[index].name:'请选择'}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </picker>
  <view>
    <view class="weui-panel__hd" style="border-top: none">乐活秀标题</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_access">
        <input class="input" name="userName" placeholder="请输入..."
               bindchange="contentInput"/>
      </view>
    </view>
  </view>
  <image src="../../img/video_publish.png" class="publish_icon" wx:if="{{show}}" bindtap="bindGetVideoButtonTap"></image>
  <video src="{{src}}" wx:if="{{!show}}" style="margin: 30rpx;display: block;width: 200rpx;height: 200rpx"></video>
  <view class="tab_bar_container">
    <view class="weui-flex tab_bar">
      <view class="weui-flex__item tab_bar_item tab_bar_left" bindtap="publish">
        <text class="publish_text">发 布</text>
      </view>
    </view>
  </view>
</scroll-view>

